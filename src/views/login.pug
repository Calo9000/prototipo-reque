extends layout

block content
    -data = data || {}

    if errors
        ul.my-errors
            for error in errors
                li= error.msg

    li.nav-item
        a.nav-link(href='/register') Register 

    form(action="/login", method="POST" class="form-registration")

        label(for="username") Username:
        input(
            type="text"
            id="username"
            name="username"
            class="form-control"
            value=data.username 
        )

        label(for="password") Password:
        input(
            type="password"
            id="password"
            name="password"
            class="form-control"
            value=data.password 
        )

        input(type="submit" value="Log in" class="btn-lg btn-primary btn-block")
